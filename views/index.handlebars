<h1>Eat Dat Burger</h1>

<img src="/assets/img/burger.png" alt="burger" style="width:304px;height:228px;">

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Delete</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Devour It!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <input type="text" id="burger-name" name="name">
  </div>

  <div class="submit-button">
    <button type="submit">Submit</button>
    <br>
    <p>Enter the burger you want to eat then click "Submit"</p>
   </div> 
</form>
